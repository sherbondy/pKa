*
  margin 0
  padding 0
  line-height 1.5
  font-family 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
body
  max-width 640px
  margin 32px auto
  padding 0 16px

h1
  margin-bottom 64px
h2
  margin-bottom 8px

#c1, #c2
  display block
  position relative
  width 282px
  padding 16px
  border 2px solid #000
  background #666
  text-decoration none
  color #fff
  float left
  margin-bottom 64px
  height 120px
  text-shadow 0px 1px 0px #000
  &:hover
    background #999
  &:active
    top 1px

  & h4
    display none

#c1
  margin-right 2px

#tips
  clear both

#message
  display none
  position absolute
  top 76px
  color #fff

  & p
    width 608px
    padding 16px

    &.right
      background #009900
    &.wrong
      background #990000

footer
  text-align center
  margin-top 64px
  & a
    position relative
    color #000099
    &:hover
      text-decoration none
    &:active
      top 1px
